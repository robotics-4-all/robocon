# RoboCon Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# API Configuration
# =============================================================================

# API Key for authentication
# Generate a secure random key for production: openssl rand -hex 32
API_KEY=123123

# API Host and Port (if running standalone API)
API_HOST=0.0.0.0
API_PORT=8080

# =============================================================================
# Application Settings
# =============================================================================

# Temporary directory for model validation and processing
# Default: /tmp/tdsl
TMP_DIR=/tmp/tdsl

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed CORS origins (comma-separated)
# Default: * (all origins)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Security
# =============================================================================

# Secret key for sessions/tokens (if implemented in future)
# SECRET_KEY=your-secret-key-here

# JWT Token expiration in minutes (if implemented in future)
# TOKEN_EXPIRE_MINUTES=30
